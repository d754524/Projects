<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/computed_tip"
            android:text="WELCOME TO THE 4X4 GAME MODE!"
            android:textColor="@color/black"
            android:textSize="25dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/b1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Button
            android:id="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/b1"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/b2"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"

            android:layout_toEndOf="@+id/b3"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/b5"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b3"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/b6"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b4"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/b7"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b5"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b6"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/b9"
            android:layout_marginStart="12dp"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="10"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b7"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/b10"
            android:layout_marginStart="12dp"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="11"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b8"
            android:layout_marginTop="17dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/b11"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b9"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="13"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b14"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b10"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/b13"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="14"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b15"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b11"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/b14"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b16"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/b12"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/b15"
            android:backgroundTint="#ff00ff00"
            android:onClick="tileClicked"
            android:text="16"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>



</RelativeLayout>