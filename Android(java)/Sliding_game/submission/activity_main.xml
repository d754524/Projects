<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/gameTitle"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:text="@string/welcome_to_our_puzzle_game"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gameExplanation"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_marginTop="30dp"
        android:text="@string/this_is_teh_classic_puzzle_where_you_start_with_a_random_order_on_the_3_x_3_or_4_x_4_grid_and_have_to_figure_out_how_to_put_the_buttons_in_order_1_8_or_1_15_again_the_empty_space_must_be_in_the_bottom_right_corner_all_puzzles_are_solvable"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="57dp"
        android:onClick="playThree"
        android:text="@string/play_3_x_3"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="298dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="25dp"
        android:onClick="playFour"
        android:text="@string/play_4_x_4"
        android:textSize="20sp"/>

</LinearLayout>